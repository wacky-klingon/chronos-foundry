# AWS Configuration Template
# Copy this to .env and fill with your actual values

# AWS Profile names (configured in ~/.aws/credentials)
AWS_PROFILE_INFRA=your-infra-profile
AWS_PROFILE_RUNTIME=your-runtime-profile

# AWS Region
AWS_REGION=us-east-1

# S3 Bucket (must be globally unique)
S3_BUCKET=your-project-bucket-name

# Environment (dev/stage/prod)
ENVIRONMENT=dev

# Project Configuration
PROJECT_NAME=YourProjectName
COST_CENTER=ml-training

# EC2 Configuration
INSTANCE_TYPE=g4dn.2xlarge
AMI_ID=ami-0c55b159cbfafe1f0  # Deep Learning AMI
